<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap 
    PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="fundtocash">

	<typeAlias alias="fundtocash" type="com.rbt.model.Fundtocash" />

	<select id="getByPk" parameterClass="java.lang.String"
		resultClass="fundtocash">
		<![CDATA[ 
    SELECT trade_id,cust_id,fund_num,getcash_type,account,account_name,in_date,user_id,order_state,remark,branch FROM fundtocash WHERE trade_id=$trade_id$
    ]]>
	</select>

	<update id="update" parameterClass="fundtocash">
		UPDATE fundtocash SET trade_id=#trade_id#,cust_id=#cust_id#,fund_num=#fund_num#,getcash_type=#getcash_type#,account=#account#,account_name=#account_name#,in_date=now(),user_id=#user_id#,order_state=#order_state#,remark=#remark#,branch=#branch# WHERE trade_id=$trade_id$
	</update>

	<insert id="insert" parameterClass="fundtocash">
		INSERT INTO fundtocash (trade_id,cust_id,fund_num,getcash_type,account,account_name,in_date,user_id,order_state,remark,branch) VALUES (#trade_id#,#cust_id#,#fund_num#,#getcash_type#,#account#,#account_name#,now(),#user_id#,#order_state#,#remark#,#branch#)
	</insert>

	<delete id="delete" parameterClass="java.lang.String">
		DELETE FROM fundtocash WHERE trade_id in ($trade_id$)
	</delete>

	<sql id="getCommon">
		FROM fundtocash left join member on fundtocash.cust_id=member.cust_id
		<dynamic prepend="WHERE">
			 <isNotNull prepend="and" property="order_state"> 
			     order_state in ($order_state$)
			 </isNotNull>
			  <isNotNull prepend="and" property="cust_id"> 
			     fundtocash.cust_id=#cust_id#
			 </isNotNull>
			  <isNotNull prepend="and" property="getcash_type"> 
			     getcash_type=#getcash_type#
			 </isNotNull>
			 <isNotNull prepend="and" property="cust_name"> 
			     INSTR(cust_name,#cust_name#) >0
			 </isNotNull>
			  <isNotNull prepend="and" property="trade_id"> 
			     trade_id=#trade_id#
			 </isNotNull>
			  <isNotNull prepend="and" property="starttime"> 
			     DATE(fundtocash.in_date)>=#starttime#
			 </isNotNull>
			  <isNotNull prepend="and" property="endtime"> 
			     #endtime#>=DATE(fundtocash.in_date)
			 </isNotNull>
			 <isNotNull prepend="and" property="inte_cust_id"> 
			     fundtocash.cust_id!=#cash_cust_id#
			 </isNotNull>
			  <isNotNull prepend="and" property="audit_cust_id"> 
			     fundtocash.cust_id!=#audit_cust_id#
			 </isNotNull>
		</dynamic>
	</sql>

	<select id="getList" parameterClass="java.util.HashMap"
		resultClass="java.util.HashMap">
		SELECT trade_id,member.cust_id as cust_id,cust_name,fund_num,getcash_type,account,account_name,fundtocash.in_date,user_id,order_state,remark,branch
		<isParameterPresent>
			<include refid="getCommon" />
		</isParameterPresent>
		ORDER BY trade_id DESC
		<isNotNull prepend="LIMIT" property="start">
			#start#,#limit#
		</isNotNull>

	</select>

	<select id="getCount" parameterClass="java.util.HashMap"
		resultClass="java.util.HashMap">
		SELECT COUNT(*) ct
		<isParameterPresent>
			<include refid="getCommon" />
		</isParameterPresent>
	</select>

</sqlMap>

